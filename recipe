Tankobon::Application.make do |a|
  a.clear!
  
  a.set :dir, File.expand_path('~/TorrentDownloads/21st Century Boys')
  
  a.set :files, <<-EOS
  21st_Century_Boys_v01_c01[Obxist]
  21st_Century_Boys_v01_c02[Obxist].zip
  EOS
  .split("\n").each {|s| s.strip!}
  
  #a.set :batch, "21cb"
end.process_files!